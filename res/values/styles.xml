<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="select_server">
        <item name="android:background">#343739</item>
        <item name="android:popupBackground">#343739</item>
        <item name="android:textColor">#A4D2EE</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="az_divider">
        <item name="android:background">@drawable/az_divider</item>
    </style>
    
    
    <style name="az_button_left_up">
        <item name="android:background">@drawable/az_button_left_up</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="az_button_right_up">
        <item name="android:background">@drawable/az_button_right_up</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="az_button_center">
        <item name="android:background">@drawable/az_button_center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="az_button_left_down">
        <item name="android:background">@drawable/az_button_left_down</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="az_button_right_down">
        <item name="android:background">@drawable/az_button_right_down</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

</resources>